{
  "name": "file-concatenator",
  "private": false,
  "version": "1.0.0",
  "description": "A modern, browser-based tool for combining multiple files with intelligent filtering and export options",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "deploy": "npm run build && npm run preview",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "file-concatenation",
    "text-processing",
    "github-integration",
    "file-system-api",
    "react",
    "typescript",
    "vite"
  ],
  "author": "File Concatenator Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/estusana/repo-concat.git"
  },
  "homepage": "https://github.com/estusana/repo-concat",
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "@tailwindcss/forms": "^0.5.6",
    "autoprefixer": "^10.4.15",
    "dexie": "^3.2.4",
    "postcss": "^8.4.29",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.3",
    "zustand": "^4.4.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.0",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "@vitest/coverage-v8": "^4.0.7",
    "@vitest/ui": "^4.0.7",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "happy-dom": "^20.0.10",
    "jsdom": "^27.1.0",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vitest": "^4.0.7"
  }
}
